extends layout

block title
	h1(class="nobreak") Baptism Utility Database

block content
	table(class="table table-hover data-table")
		thead
			tr
				th Last Name
				th First Name
				th CMF
				th Method
				th Baptismal Date
				th Confirmation Date
				th Stake
				th Stake ID
				th Unit
				th Unit ID
				th Senior Companion
				th Junior Companion
				th Third Companion
				th(class="noprint") Edit
				th(class="noprint") Delete
				
		tbody
			- for(var i = 0; i < buds.length; i++){
			tr
				td=buds[i].lastName
				td=buds[i].firstName
				td=buds[i].cmf
				td=buds[i].method
				td=buds[i].bapDate
				td=buds[i].confDate
				td=buds[i].stakeName
				td=buds[i].stakeID
				td=buds[i].unitName
				td=buds[i].unitID
				td=buds[i].seniorCompanion
				td=buds[i].juniorCompanion
				td=buds[i].thirdCompanion
				td
					a(class="btn btn-warning no-print" href="/buds/edit/"+i) Edit
				td
					a(class="btn btn-danger no-print" href="/buds/delete/"+i) Delete
			- }