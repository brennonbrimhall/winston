extends layout

block title
	h1=title

block content
	form(id="masstext" class="form-horizontal", action="/sendtext", method="get", enctype="application/json")
		div(class="form-group")
			label(for="subject") Subject
			input(class="form-control" type="text" name="subject")
		div(class="form-group")
			label(for="message") Message
			textarea(name="message" class="form-control" form="masstext")
		div(class="form-group")
			input(type="submit" class="btn btn-primary")