extends layout

block title
	a(class="btn btn-primary btn-right captialize" href="/reports/weekly/war") Print Mission Weekly WAR
	a(class="btn btn-primary btn-right captialize" href="/reports/smr") Print Mission Directory
	h1
		a(class="header-link" href="/missiontotals") Mission Totals

block content
	- for(group in areas){
	- for(zone in areas[group]){
	//Verify that this isn't the office
	- if(zone != 'MISSION OFFICE'){
		a(class="btn btn-primary btn-right captialize" href="/zone/"+zone+"/war") Print Blank WARs
		a(class="btn btn-primary btn-right captialize" href="/reports/weekly/war?zone="+zone) Print Weekly WAR
		a(class="btn btn-primary btn-right captialize" href="/reports/smr?zone="+zone) Print Directory
		h2
			a(class="captialize header-link" href="/zone/"+zone)=zone.toLowerCase()
	- for(district in areas[group][zone]){
	div(class="panel panel-default")
		div(class="panel-heading")
			a(href="/district/"+district.replace('/', '-') class="header-link captialize")=district.toLowerCase()
		div(class="panel-content")
		div(class="list-group")
		- for(area in areas[group][zone][district]){
			a(href="/areas/"+area.replace('/', '-') class="list-group-item captialize")=area.toLowerCase()
		- }
	- }
	- }
	- }
	- }