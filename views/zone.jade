extends layout

block title
	h1(class="nobreak captialize")=title.toLowerCase()

block content
	h2 Zone Information
	ul
		- for(district in zone){
		li(class="captialize")
			a(href="/district/"+district)=district.toLowerCase()
		ul
			-for(area in zone[district]){
			li(class="captialize")
				a(href="/areas/"+area.replace('/', '-'))=area.toLowerCase()
			-}
		- }
	h2 Reports
	- for(var t = 0; t < data.length; t++){
	//Table for each transfer
	table(class="table table-hover")
		thead
			tr
				th Submitted
				- for(var i = 0; i < config.length; i++){
				th=config[i].name
				- }
		tbody
			- for(var i = 0; i < data[t].length; i++){
			tr
				td=data[t][i]['$']
				- for(var j = 0; j < config.length; j++){
				td=data[t][i][config[j]['shortname']]+' ('+Math.round((data[t][i][config[j]['shortname']]/numComps)*100)/100+')'
				- }
			- }
	- }