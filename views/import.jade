extends layout

block title
	h1=title

block content
	div(class="panel panel-default")
		div(class="panel-heading")
			h3(class="panel-title") Import "Current Organization - Excel" Report
		div(class="panel-body")
			p Generate area list from the Current Organization - Excel iMOS report.  Used for just about everything.
			form(action="/import/roster", method="post", enctype="multipart/form-data")
				div(class="btn-group" role="group")
					span(class="btn btn-default btn-file") Browse
						input(type="file", class="btn btn-default", name="uploadroster", id="uploadroster")
					input(type="submit" class="btn btn-primary" value="Upload" name="Upload")
	div(class="panel panel-default")
		div(class="panel-heading")
			h3(class="panel-title") Import "Organization Roster - Excel" Report
		div(class="panel-body")
			p Import the Organization Roster from iMOS.  Used to generate SMRs.
			form(action="/import/organization-roster", method="post", enctype="multipart/form-data")
				div(class="btn-group" role="group")
					span(class="btn btn-default btn-file") Browse
						input(type="file", class="btn btn-default", name="uploadorganizationroster", id="uploadorganizationroster")
					input(type="submit" class="btn btn-primary" value="Upload" name="Upload")
	div(class="panel panel-default")
		div(class="panel-heading")
			h3(class="panel-title") Import "Transfer Planning" Report
		div(class="panel-body")
			p Import the Transfer Planning Report from iMOS.  Used to generate SMRs.
			form(action="/import/transfer-planning", method="post", enctype="multipart/form-data")
				div(class="btn-group" role="group")
					span(class="btn btn-default btn-file") Browse
						input(type="file", class="btn btn-default", name="uploadtransferplanning", id="uploadtransferplanning")
					input(type="submit" class="btn btn-primary" value="Upload" name="Upload")
	div(class="panel panel-default")
		div(class="panel-heading")
			h3(class="panel-title") Import "Vehicle Assignments" Report
		div(class="panel-body")
			p Import the Vehicle Assignments Report from iMOS.  Used to generate SMRs and WARs.
			form(action="/import/vehicle-assignments", method="post", enctype="multipart/form-data")
				div(class="btn-group" role="group")
					span(class="btn btn-default btn-file") Browse
						input(type="file", class="btn btn-default", name="uploadvehicleassignments", id="uploadvehicleassignments")
					input(type="submit" class="btn btn-primary" value="Upload" name="Upload")
	div(class="panel panel-default")
		div(class="panel-heading")
			h3(class="panel-title") Import Picture for Missionary
		div(class="panel-body")
			p Import a picture for a missionary.  Used to generate SMRs.
			form(action="/import/picture", method="post", enctype="multipart/form-data")
				div(class="form-group")
					label(for="id" class="col-sm-2 control-label") Missionary ID (from iMOS roster)
					div(class="col-sm-10")
						
						input(name="id" type="number" class="form-control" required)
						div(class="btn-group btn-right" role="group")
							span(class="btn btn-default btn-file") Browse
								input(type="file", class="btn btn-default", name="picture", id="picture")
							input(type="submit" class="btn btn-primary" value="Upload" name="Upload")